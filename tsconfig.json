{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipDefaultLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@views": ["views"],
      "@views/*": ["views/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@sdk": ["sdk"],
      "@sdk/*": ["sdk/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@connector": ["connector"],
      "@connector/*": ["connector/*"],
      "@state": ["state"],
      "@state/*": ["state/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
